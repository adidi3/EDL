<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginstart"
    android:layout_height="match_parent"
    tools:context=".StudentsInfo">


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:background="@color/medium"
            android:layout_height="match_parent"
            android:id="@+id/btChoose"
            android:onClick="show"

            android:layout_weight="0.3"
            android:text="Show student's details"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="2"
            app:srcCompat="@drawable/edlfinal" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5.5"
        android:layout_height="0dp"
        android:orientation="horizontal">



        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Name"/>

        <EditText
            android:id="@+id/eTname1"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4.2"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Phone"/>

        <TextView
            android:id="@+id/eTphone1"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text=""/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4.2"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="id"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tvid1"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text=""/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5.5"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textColor="@color/colorPrimaryDark"
            android:text="Manual/Auto"/>

        <EditText
            android:id="@+id/etmanual1"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5.5"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1.5"
            android:text="Female/Male"/>

        <EditText
            android:id="@+id/etfe1"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4.2"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1.5"
            android:text="Lesson number"/>

        <TextView
            android:id="@+id/tvcount1"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4.2"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1.5"
            android:text="Date of birth"/>
        <TextView
            android:id="@+id/tvDate1"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4.2"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            app:srcCompat="@drawable/edlfinal" />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btEnter"
            android:onClick="update"
            android:background="@color/medium"
            android:layout_weight="0.2"
            android:text="Update data"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btDelete"
            android:background="@color/medium"
            android:onClick="delete"
            android:layout_weight="0.2"
            android:text="Remove student"/>

    </LinearLayout>
</LinearLayout>