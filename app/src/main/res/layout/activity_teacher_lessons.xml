<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginstart"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".TeacherLessons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:srcCompat="@drawable/edlfinal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:textColor="@color/colorPrimaryDark"
            android:text="sunday"
            android:textAlignment="center"
            android:textSize="20dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/colorPrimaryDark"
            android:text="sunday"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btl"
            android:background="@color/white"
            android:onClick="bl"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrowdriverleft" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />



        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/btr"
            android:onClick="br"
            android:layout_weight="1"
            app:srcCompat="@drawable/arroedriverright" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colo"
            android:id="@+id/btEnter"
            android:onClick="NW"
            android:layout_weight="0.3"
            android:text="new week"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_weight="24"
        android:layout_height="0dp"
        android:id="@+id/lv1"/>
</LinearLayout>