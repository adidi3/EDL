<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginstart"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lessonsStudent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:srcCompat="@drawable/edlfinal" />

        <TextView
            android:id="@+id/tv3"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="Welcome"
            android:textAlignment="center"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/colorPrimaryDark"            android:text="sunday"
            android:textAlignment="center"
            android:textSize="20dp"
            />


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/light"
            android:id="@+id/previous"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="previous"
            android:layout_weight="1"
            android:text="to the previous day"/>




        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/next"
            android:background="@color/light"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="next"
            android:layout_weight="1"
            android:text="to the next day"/>
    </LinearLayout>




    <ListView
        android:layout_width="match_parent"
        android:layout_weight="25"
        android:layout_height="0dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/lv11"/>
</LinearLayout>